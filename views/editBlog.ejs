<%-include('partials/header')-%>

    <div class="post-body">
        <form action="/editBlog/<%=post.title%>" method="POST">
            <label> Image </label>
            <input type="file" accept="image/*" name="imgurl" value="<%=post.imgurl%>">
            <label> Title </label>
            <input type="text" name="title" value="<%=post.title%>">
            <label> content </label>
            <textarea id="" cols="30" rows="10" name="content"><%=post.content%></textarea>
            <button type="submit" class="btn btn-dark btn-large">Submit Blog</button>
        </form>
    </div>


    <%-include('partials/footer')-%>